import { useRef, useState, useEffect } from 'react';
import {
  View,
  Text,
  StyleSheet,
  Image,
  TouchableOpacity,
  Dimensions,
  TextInput,
  Keyboard,
} from 'react-native';
import Swiper from 'react-native-swiper';
import { SafeAreaView } from 'react-native-safe-area-context';
import { useNavigation } from '@react-navigation/native';
import Toast from 'react-native-toast-message';
import CircularProgressBar from '../../components/loadingBar/CircularProgressBar';
import { setupUserProfile, markOnboardingComplete, checkAuthState } from '../../lib/auth';
import AsyncStorage from '@react-native-async-storage/async-storage';

const { width } = Dimensions.get('window');

const slides = [
  {
    id: 1,
    title: 'Welcome to Happy Inline',
    text: 'Discover top-rated barbers and salons in your area, all in one convenient place. Find the perfect style with just a few taps.',
    image: 'https://png.pngtree.com/png-clipart/20241114/original/pngtree-barbers-hairdresser-cutting-png-image_17032465.png',
  },
  {
    id: 2,
    title: 'Easy Booking',
    text: 'Book your next haircut or grooming session effortlessly through our app. Say goodbye to long waits and enjoy hassle-free scheduling.',
    image: 'https://cdni.iconscout.com/illustration/premium/thumb/barber-shaping-beard-of-the-client-illustration-download-in-svg-png-gif-file-formats--cutting-shaving-beauty-and-fashion-pack-illustrations-5410658.png',
  },
  {
    id: 3,
    title: 'Get Your Style',
    text: 'Let our expert stylists bring your look to life. From modern cuts to classic styles, achieve the look that truly defines you.',
    image: 'https://png.pngtree.com/png-clipart/20241114/original/pngtree-barbers-hairdresser-cutting-png-image_17032465.png',
  },
];

const Onboarding = () => {
  const navigation = useNavigation();
  const swiperRef = useRef(null);
  const [activeIndex, setActiveIndex] = useState(0);
  const [showNameInput, setShowNameInput] = useState(false);
  const [showSlides, setShowSlides] = useState(true);
  const [isAuthenticated, setIsAuthenticated] = useState(false);
  const [name, setName] = useState('');
  const [loading, setLoading] = useState(true);

  // Check if user is authenticated on mount
  useEffect(() => {
    const checkAuth = async () => {
      const authState = await checkAuthState();
      setIsAuthenticated(authState.isAuthenticated);
      
      // If authenticated, skip slides and go straight to name input
      if (authState.isAuthenticated) {
        setShowSlides(false);
        setShowNameInput(true);
      } else {
        setShowSlides(true);
      }
      
      setLoading(false);
    };
    
    checkAuth();
  }, []);

  const handleNext = () => {
    if (activeIndex < slides.length - 1) {
      swiperRef.current.scrollBy(1);
    }
  };

  const handleBack = () => {
    if (activeIndex > 0) {
      swiperRef.current.scrollBy(-1);
    } else if (showNameInput) {
      setShowNameInput(false);
    }
  };

  const handleSkip = async () => {
    console.log('ðŸ”„ Skipped onboarding intro');
    // Mark as seen and navigate to auth
    await AsyncStorage.setItem('has_seen_onboarding', 'true');
    navigation.replace('EmailAuthScreen');
  };

  const handleFinish = async () => {
    console.log('âœ… Finished onboarding slides');
    // Mark as seen and navigate to auth
    await AsyncStorage.setItem('has_seen_onboarding', 'true');
    navigation.replace('EmailAuthScreen');
  };

  const handleCompleteOnboarding = async () => {
    // Validate name
    if (!name.trim()) {
      Toast.show({
        type: 'error',
        text1: 'Name Required',
        text2: 'Please enter your name to continue',
      });
      return;
    }

    if (name.trim().length < 2) {
      Toast.show({
        type: 'error',
        text1: 'Invalid Name',
        text2: 'Name must be at least 2 characters',
      });
      return;
    }

    setLoading(true);

    try {
      console.log('ï¿½ Verifying authentication...');
      
      // Double-check authentication before allowing profile setup
      const authState = await checkAuthState();
      if (!authState.isAuthenticated) {
        console.error('âŒ User not authenticated - redirecting to login');
        Toast.show({
          type: 'error',
          text1: 'Authentication Required',
          text2: 'Please login first',
        });
        await AsyncStorage.setItem('has_seen_onboarding', 'true');
        navigation.replace('EmailAuthScreen');
        setLoading(false);
        return;
      }
      
      console.log('ï¿½ðŸ’¾ Setting up user profile with name:', name);
      
      // Setup user profile with name
      const result = await setupUserProfile(name.trim(), 'customer');
      
      if (result.success) {
        console.log('âœ… Profile setup successful');
        
        // Mark onboarding as complete
        await markOnboardingComplete();
        
        Toast.show({
          type: 'success',
          text1: 'Welcome!',
          text2: `Hi ${name}, let's get started!`,
        });
        
        // Navigate to main app
        navigation.replace('MainScreen');
      } else {
        console.error('âŒ Profile setup failed:', result.error);
        Toast.show({
          type: 'error',
          text1: 'Setup Failed',
          text2: result.error || 'Please try again',
        });
      }
      
    } catch (error) {
      console.error('âŒ Error completing onboarding:', error);
      Toast.show({
        type: 'error',
        text1: 'Error',
        text2: 'An unexpected error occurred',
      });
    } finally {
      setLoading(false);
    }
  };

  // Show loading while checking auth
  if (loading) {
    return (
      <SafeAreaView style={styles.container}>
        <CircularProgressBar loaderText="Loading..." />
      </SafeAreaView>
    );
  }

  // Show name input screen (for authenticated users)
  if (showNameInput) {
    return (
      <SafeAreaView style={styles.container}>
        {loading && <CircularProgressBar loaderText="Setting up your profile..." />}
        
        <View style={styles.nameInputContainer}>
          <Text style={styles.nameInputTitle}>What's your name?</Text>
          <Text style={styles.nameInputSubtitle}>
            Let us know how to address you
          </Text>

          <TextInput
            style={styles.nameInput}
            value={name}
            onChangeText={setName}
            placeholder="Enter your full name"
            placeholderTextColor="rgba(0, 0, 0, 0.4)"
            autoFocus
            returnKeyType="done"
            onSubmitEditing={handleCompleteOnboarding}
          />

          <TouchableOpacity 
            style={[styles.continueButton, !name.trim() && styles.continueButtonDisabled]} 
            onPress={handleCompleteOnboarding}
            disabled={!name.trim()}
          >
            <Text style={styles.continueButtonText}>Continue</Text>
          </TouchableOpacity>
        </View>
      </SafeAreaView>
    );
  }

  // Show onboarding slides (for first-time users)
  return (
    <SafeAreaView style={styles.container}>
      <TouchableOpacity style={styles.skipButton} onPress={handleSkip}>
        <Text style={styles.skipText}>Skip</Text>
      </TouchableOpacity>

      <Swiper
        ref={swiperRef}
        loop={false}
        onIndexChanged={(index) => setActiveIndex(index)}
        dot={<View style={styles.dot} />}
        activeDot={<View style={styles.activeDot} />}
        paginationStyle={{ bottom: 120 }}
      >
        {slides.map((slide) => (
          <View key={slide.id} style={styles.slide}>
            <Image source={{ uri: slide.image }} style={styles.image} />
            <Text style={styles.title}>{slide.title}</Text>
            <Text style={styles.text}>{slide.text}</Text>
          </View>
        ))}
      </Swiper>

      <View style={styles.buttonRow}>
        {activeIndex > 0 ? (
          <TouchableOpacity style={styles.navButton} onPress={handleBack}>
            <Text style={styles.navButtonText}>Back</Text>
          </TouchableOpacity>
        ) : (
          <View style={{ width: 80 }} />
        )}

        {activeIndex === slides.length - 1 ? (
          <TouchableOpacity style={styles.startButton} onPress={handleFinish}>
            <Text style={styles.startButtonText}>Get Started</Text>
          </TouchableOpacity>
        ) : (
          <TouchableOpacity style={styles.navButton} onPress={handleNext}>
            <Text style={styles.navButtonText}>Next</Text>
          </TouchableOpacity>
        )}
      </View>
    </SafeAreaView>
  );
};

export default Onboarding;

